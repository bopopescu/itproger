<Container>:
# BoxLayout
#:kivy 1.4
    background_color: .7, .7, 1, 1
    orientation: 'vertical'
    get_input: get_input
    button_mul: button_mul
    button_div: button_div
    button_sub: button_sub
    button_add: button_add
    sign_point: sign_point
    reset: reset

    TextInput:
        orientation: 'vertical'
        id: get_input
        multiline: False
        text:''
        size_hint: 1, 0.2
        font_size: "55sp"
        halign: 'left'
        input_filter: float

    GridLayout:
        cols: 4
        rows: 4


        Button:
            text: "7"
            font_size: "30sp"
            on_release:
                get_input.text += self.text
        Button:
            text: "8"
            font_size: "30sp"
            on_release:
                get_input.text += self.text
        Button:
            text: "9"
            font_size: "30sp"
            on_release:
                get_input.text += self.text
        Button:
            id: button_mul
            text: "*"
            on_release:
                root.print_operation(get_input.text, self.text)
        Button:
            text: "4"
            font_size: "30sp"
            on_release:
                get_input.text += self.text
        Button:
            text: "5"
            font_size: "30sp"
            on_release:
                get_input.text += self.text
        Button:
            text: "6"
            font_size: "30sp"
            on_release:
                get_input.text += self.text
        Button:
            text: "/"
            id: button_div
            on_release:
                root.print_operation(get_input.text, self.text)
        Button:
            text: "1"
            font_size: "30sp"
            on_release:
                get_input.text += self.text
        Button:
            text: "2"
            font_size: "30sp"
            on_release:
                get_input.text += self.text
        Button:
            text: "3"
            font_size: "30sp"
            on_release:
                get_input.text += self.text
        Button:
            text: "-"
            id: button_sub
            on_release:
                root.print_operation(get_input.text, self.text)
        Button:
            text: "0"
            font_size: "30sp"
            on_release:
                get_input.text += self.text
        Button:
            text: "."
            id: sign_point
            on_release:
                root.decimal_sign()
        Button:
            text: "AC"
            id: reset
            on_release:
                root.clear_display()
        Button:
            text: "+"
            id: button_add
            on_release:
                root.print_operation(get_input.text,self.text)

    Button:
        text: '='
        id: result
        font_size: "40sp"
        size_hint: 1, 0.2
        on_release:
            root.do_operation(get_input.text)
