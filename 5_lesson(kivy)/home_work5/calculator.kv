<Container>:
# BoxLayout

    orientation: 'vertical'
    get_input: get_input
    sign_point: sign_point
    zero : zero
    id7: id7
    reset: reset

    TextInput:
        orientation: 'vertical'
        id: get_input
        multiline: False
        text:''
        size_hint: 1, 0.2
        font_size: "55sp"

        halign: 'left'
        input_filter: float
        input_type: 'number'


    GridLayout:
        cols: 4
        rows: 4


        Button:
            text: "7"
            id: id7
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.5
            on_release:
                root.check_input(self.text)
        Button:
            text: "8"
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.5
            on_release:
                root.check_input(self.text)
        Button:
            text: "9"
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.5
            on_release:
                root.check_input(self.text)
        Button:
            id: button_mul
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.8
            text: "*"
            on_release:
                root.print_operation(get_input.text, self.text)
        Button:
            text: "4"
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.5
            on_release:
                root.check_input(self.text)
        Button:
            text: "5"
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.5
            on_release:
                root.check_input(self.text)
        Button:
            text: "6"
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.5
            on_release:
                root.check_input(self.text)
        Button:
            text: "/"
            id: button_div
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.8
            on_release:
                root.print_operation(get_input.text, self.text)
        Button:
            text: "1"
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.5
            on_release:
                root.check_input(self.text)
        Button:
            text: "2"
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.5
            on_release:
                root.check_input(self.text)
        Button:
            text: "3"
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.5
            on_release:
                root.check_input(self.text)
        Button:
            text: "-"
            id: button_sub
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.8
            on_release:
                root.print_operation(get_input.text, self.text)
        Button:
            text: "0"
            id: zero
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.5
            on_release:
                root.enter_zero(self.text)
        Button:
            text: "."
            id: sign_point
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.8
            on_release:
                root.decimal_sign()
        Button:
            text: "AC"
            id: reset
            font_size: "40sp"
            background_color: 1, 0.2, 0.4, 0.8
            on_release:
                root.clear_display()
        Button:
            text: "+"
            id: button_add
            font_size: "40sp"
            background_color: 0.2, 0.2, 0.4, 0.8
            on_release:
                root.print_operation(get_input.text,self.text)

    Button:
        text: '='
        id: result
        font_size: "40sp"
        size_hint: 1, 0.2
        on_release:
            root.do_operation(get_input.text)
